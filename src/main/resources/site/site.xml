<site>
  <form>
    <input name="pixelCode" type="TextLine">
      <label i18n="pixel-code.label">Facebook Pixel-ID</label>
      <help-text i18n="pixel-code.help-text">Genererer javascript-koden automatisk basert på Facebook Pixel-IDen.</help-text>
      <occurrences maximum="1" minimum="0" />
    </input>
    <item-set name="disableCookies">
      <label i18n="disable.label">Deaktiverende cookie</label>
      <help-text i18n="disable.help-text">Legg til cookier som appen skal se etter. Hvis de har oppgit verdi vil ikke Facebook Pixel bli lagt til på siden.</help-text>
      <occurrences maximum="0" minimum="0" />
      <items>
        <input name="name" type="TextLine">
          <label i18n="disable.name">Cookie navn</label>
          <occurrences maximum="1" minimum="1" />
        </input>
        <input name="value" type="TextLine">
          <label i18n="disable.value">Cookie verdi</label>
          <occurrences maximum="1" minimum="1" />
          <default>true</default>
        </input>
      </items>
    </item-set>
  </form>
  <processors>
    <response-processor name="add-facebook-pixel-script" order="20" />
  </processors>
</site>
